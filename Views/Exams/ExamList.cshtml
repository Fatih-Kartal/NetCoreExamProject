@model List<NetCoreExamProject.Models.Exam>
@{
    ViewData["Title"] = "Exams";
}

<h1>Exams</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date Created</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Post.Title</td>
                <td>@item.CreateDate</td>
                <td>
                    <button type="button" class="btn btn-danger" onclick="deleteExam(@item.Id)">DELETE</button>
                    <a href="SolveExam?id=@item.Id" type="button" class="btn btn-primary" onclick="solveExam(@item.Id)">SOLVE</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/js/CreateExam.js"></script>
